<Window x:Name="MouseClick" x:Class="MouseClickWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MouseClickWPF"
        mc:Ignorable="d"
        Title="按鈕點擊計算程式" Height="350" Width="525">
    <Grid>
        <Button x:Name="ButtonClick" Content="點擊" HorizontalAlignment="Left" Height="44" Margin="144,125,0,0" VerticalAlignment="Top" Width="231" RenderTransformOrigin="0.5,0.5" IsDefault="True" FontSize="20" Click="ButtonClick_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.213"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="ButtonReset" Content="重設" HorizontalAlignment="Left" Height="44" Margin="141,205,0,0" VerticalAlignment="Top" Width="231" FontSize="20" Click="ButtonReset_Click"/>
        <Label x:Name="LabelTimes" Content="已經點了…… 0 次" HorizontalAlignment="Left" Margin="141,48,0,0" VerticalAlignment="Top" Width="231" FontSize="22"/>

    </Grid>
</Window>
